<%# if logged_in? %>
  <p>ログインユーザー: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task_path(task) %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
  </ul>
  <div>
    <%= link_to "新規タスクの追加", new_task_path %>
  </div>
  <div>
    <%= link_to "Logout", logout_path, method: :delete %>
  </div>
  
<%# end %>
